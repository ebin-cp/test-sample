{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["es2022"],
		"strict": true,
		"preserveConstEnums": true,
		"noEmit": false,
		"sourceMap": false,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"outDir": "dist",
		"noUncheckedIndexedAccess": true,
		"removeComments": true,
		"allowJs": false
	},
	"exclude": [
		"node_modules",
		"**/*.test.ts",
		"./dist/**/*",
		"aws-api-gateway",
		"tests"
	],
	"include": ["dev/**/*", "src/**/*", ".env"]
}
